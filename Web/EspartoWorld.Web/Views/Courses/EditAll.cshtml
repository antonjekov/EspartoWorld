@model IEnumerable<EspartoWorld.Web.ViewModels.Courses.CourseViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["All courses for edit"];
}



<table class="table table-hover">
    <thead class="bg-light">
        <tr>
            <th scope="col">@localizer["Dates"]</th>
            <th scope="col">@localizer["Title of course"]</th>
            <th></th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td><i class="far fa-calendar-alt"></i> @item.StartDateString - @item.EndDateString</td>
                <td>@item.Title</td>
                <td>
                    <form asp-action="Delete" asp-controller="Courses" asp-route-id="@item.Id" method="post">
                        <button asp-action="Edit" asp-controller="Courses" asp-route-id="@item.Id" class="fas btn btn-success"> @localizer["Edit"] &#xf04b</button>
                        <input type="submit" value="@localizer["Delete"] &#xf2ed" class="fas btn btn-danger " />
                    </form>
                </td>
            </tr>
        }
    </tbody>
</table>
