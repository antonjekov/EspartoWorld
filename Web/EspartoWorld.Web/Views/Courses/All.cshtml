@model IEnumerable<EspartoWorld.Web.ViewModels.Courses.CourseViewModel>
@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["All courses"];
}
<h1>@localizer["All courses"]</h1>
<hr />

<table class="table table-hover">
    <thead>
        <tr>
            <th scope="col">@localizer["Dates"]</th>
            <th scope="col">@localizer["Title"]</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var item in Model)
        {
            <tr>
                <td>@item.StartDateString - @item.EndDateString</td>
                <td>@item.Title</td>
                <td>
                    <a asp-action="Details" asp-controller="Courses" asp-route-id="@item.Id" class="btn btn-success">@localizer["Details"]</a>
                </td>
            </tr>
        }
    </tbody>
</table>
