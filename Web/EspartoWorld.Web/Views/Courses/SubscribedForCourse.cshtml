@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

@{
    ViewData["Title"] = localizer["Successfully subscribed!"];
}

<div class="jumbotron text-center">
    <h3 class="display-4">@localizer["We hope to see You soon in this course!"]</h3>
    <p class="lead"><strong>@localizer["Please check your email"]</strong> @localizer["for further information about the course."]</p>
    <hr>
    <p>
        @localizer["Having questions?"] <a asp-controller="Contact" asp-action="Index">@localizer["Contact us"]</a>
    </p>
    <p class="lead">
        <a class="btn btn-primary btn-sm" asp-controller="Home" asp-action="Index">@localizer["Continue to homepage"]</a>
    </p>
</div>
