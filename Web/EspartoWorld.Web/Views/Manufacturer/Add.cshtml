@*@model EspartoWorld.Web.ViewModels.Manufacturers.ManufacturerInputModel
@using  EspartoWorld.Data.Models
@using EspartoWorld.Web.ViewModels.Manufacturers
@inject Microsoft.AspNetCore.Mvc.Localization.IViewLocalizer localizer
@inject EspartoWorld.Services.Data.IManufacturersService manufacturersService
@{
    ViewData["Title"] = localizer["Add manufacturer"];
}
<h1>@localizer["Add manufacturer"]</h1>
<hr />
<form asp-action="Add" asp-controller="Product" method="post">
    <div class="form-group">
        <label asp-for="Name" class="control-label"></label>
        <input asp-for="Name" class="form-control" />
        <span asp-validation-for="Name" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Description" class="control-label"></label>
        <input asp-for="Description" class="form-control" />
        <span asp-validation-for="Description" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Price" class="control-label"></label>
        <input asp-for="Price" class="form-control" />
        <span asp-validation-for="Price" class="text-danger"></span>
    </div>
    <div class="form-group">
        <label asp-for="Quantity" class="control-label"></label>
        <input asp-for="Quantity" class="form-control" />
        <span asp-validation-for="Quantity" class="text-danger"></span>
    </div>
    <div class="form-group">
        <select onchange="HideForm()" id="ManufacturerId" asp-items="@(new SelectList(manufacturersService.GetAll<ManufacturersViewModel>(),"Id","Name"))" class="form-control"><option selected value="0">-- New manufacturer --</option></select>
    </div>
</form>

<form id="manufacturerForm" asp-action="Add" asp-controller="Manufacturer" method="post">
    <div asp-validation-summary="ModelOnly" class="text-danger"></div>
    <div class="row">
        <div class="col-md-4">
            <div class="form-group">
                <label asp-for="Name" class="control-label"></label>
                <input asp-for="Name" class="form-control" />
                <span asp-validation-for="Name" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Id" class="control-label"></label>
                <input asp-for="Id" class="form-control" />
                <span asp-validation-for="Id" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Telephone" class="control-label"></label>
                <input asp-for="Telephone" class="form-control" />
                <span asp-validation-for="Telephone" class="text-danger"></span>
            </div>
            <div class="form-group">
                <label asp-for="Address" class="control-label"></label>
                <input asp-for="Address" class="form-control" />
                <span asp-validation-for="Address" class="text-danger"></span>
            </div>
            <div class="form-group">
                <input type="submit" value="Add manufacturer" class="btn btn-success m-1" />
            </div>
        </div>
    </div>
</form>

@section Scripts{
    <script>
        function HideForm() {
            let selectedManufacturerValue = document.getElementById("ManufacturerId").value;
            let formManufacturerElement = document.getElementById("manufacturerForm");
            if (selectedManufacturerValue == 0) {
                formManufacturerElement.style.display = "block"
            } else {
                formManufacturerElement.style.display = "none"
            }
        }
    </script>
}*@

