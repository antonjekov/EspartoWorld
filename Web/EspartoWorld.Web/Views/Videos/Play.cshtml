@using Microsoft.AspNetCore.Mvc.Localization
@inject IViewLocalizer localizer

<div class="embed-responsive embed-responsive-16by9 col-xl-8 offset-xl-2">
    <iframe class="embed-responsive-item" src="https://www.youtube.com/embed/@ViewData["VideoId"]?controls=0" allowfullscreen></iframe>
</div>
<div class="d-flex justify-content-center">
    <button class="btn btn-success mt-3" asp-action="All">@localizer["All videos"]</button>
</div>